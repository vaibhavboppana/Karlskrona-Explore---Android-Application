<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/boyicon"
                android:layout_marginTop="16dp"
                android:id="@+id/iv_profile"
                android:layout_marginEnd="16dp"/>


            <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_vector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:id="@+id/iv_app"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/because"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_app"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="@string/because"
                android:textColor="@color/text_color"
                android:textSize="38dp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/karlskrona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/because"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="@string/karlskrona"
                android:textColor="#3B1CFF"
                android:textSize="38dp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/is"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/karlskrona"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="@string/is_always_a"
                android:textColor="@color/text_color"
                android:textSize="38dp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/is"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="@string/good_idea"
                android:textColor="@color/text_color"
                android:textSize="38dp"
                />




            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/experience_text"
                app:layout_constraintTop_toBottomOf="@id/good"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:id="@+id/iv_experience"/>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:id="@+id/ct_touristattraction"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_experience"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:id="@+id/tv_toursitattraction"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/touristattraction">
                </ImageView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_toursitattraction"
                    android:text="Tourist attractions"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:id="@+id/ct_restaurants"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ct_touristattraction"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:id="@+id/iv_restaurant"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/restaurant">
                </ImageView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_restaurant"
                    android:text="Restaurants"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"/>

            </androidx.constraintlayout.widget.ConstraintLayout>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:id="@+id/ct_accomodations"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ct_restaurants"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:id="@+id/iv_accomadations"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/accomodations">
                </ImageView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_accomadations"
                    android:text="Accommodations"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:id="@+id/ct_transportation"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ct_accomodations"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:id="@+id/iv_transportation"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/transportation">
                </ImageView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_transportation"
                    android:text="Transportation"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:id="@+id/ct_grocery"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ct_transportation"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:id="@+id/iv_grocery"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/grocery">
                </ImageView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_grocery"
                    android:text="Grocery"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:id="@+id/ct_shopping"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ct_grocery"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="180dp"
                    android:id="@+id/iv_shopping"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/shopping">
                </ImageView>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_shopping"
                    android:text="Shopping"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>